%h1 Listing blocks

%table
  %thead
    %tr
      %th Menu name
      %th Content page
      %th Background
      %th Background image
      %th Content
      %th Active
      %th
      %th
      %th

  %tbody
    - @blocks.each do |block|
      %tr
        %td= block.menu_name
        %td= block.content_page_id
        %td= block.background
        %td= block.background_image
        %td= block.content
        %td= block.active
        %td= link_to 'Show', block
        %td= link_to 'Edit', edit_block_path(block)
        %td= link_to 'Destroy', block, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Block', new_block_path
